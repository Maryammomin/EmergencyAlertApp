<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PERMISSIONS REQUIRED FOR FIREBASE, SMS, AND CALLING -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Location permissions were removed as requested -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmergencyAlertApp"
        tools:targetApi="31">

        <!-- 1. The Welcome Activity (Opens first) -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2. Signup Page -->
        <activity
            android:name=".SignupActivity"
            android:exported="false" />

        <!-- 3. Login Page -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- 4. Profile Setup Page -->
        <activity
            android:name=".ProfileInfoActivity"
            android:exported="false" />

        <!-- 5. Emergency Contacts Page -->
        <activity
            android:name=".EmergencyContactActivity"
            android:exported="false" />

        <!-- 6. Main Dashboard (Contains Home, Contacts, and History Fragments) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>